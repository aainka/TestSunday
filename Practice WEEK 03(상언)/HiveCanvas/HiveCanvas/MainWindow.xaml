<Window x:Class="HiveCanvas.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HiveCanvas"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Canvas x:Name="Garden" Background="Blue">
        <TextBlock Text="Welcome to Aquarium" FontSize="32" Foreground="Orange" Canvas.Top="32" Canvas.Left="0"/>
        <Image  Canvas.Top="167" Canvas.Left="264" Source="/images/bee_house.png" Width="100" HorizontalAlignment="Center" VerticalAlignment="Top"
                MouseDown="Hive_MouseDown"/>
        <Image    x:Name="Bee" Canvas.Top="128" Canvas.Left="400" Source="/images/bee_worker.png" Width="62" Height="62" RenderTransformOrigin="0.5,0.5" 
                  MouseDown="Bee_MouseDown"/>
        <Image  Name="sunfish" Canvas.Top="199" Canvas.Left="567" Source="/images/sunfish.png" Width="62" Height="114"/>
    </Canvas>
</Window>
