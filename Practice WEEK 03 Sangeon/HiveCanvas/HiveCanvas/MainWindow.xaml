<Window x:Class="HiveCanvas.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HiveCanvas"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Background>
        <ImageBrush ImageSource="/images/background.png"></ImageBrush>
    </Window.Background>
    <Canvas x:Name="Aquarium" Background="Transparent">
        <!--<Image  Source="/images/background.png" 
                Width="{Binding ElementName=Aquarium, Path=ActualWidth}" 
                Height="{Binding ElementName=Aquarium, Path=ActualHeight}" 
                Stretch="UniformToFill"/>-->
        <TextBlock Text="Welcome to Aquarium" FontSize="32" Foreground="Orange" Canvas.Top="32" Canvas.Left="0"/>
        <Image  x:Name="UCave" Canvas.Bottom="17" Canvas.Left="85" Canvas.Top="256" Height="130"
                Source="/images/cave.png" Width="221" HorizontalAlignment="Left" VerticalAlignment="Top"
                MouseDown="UCave_MouseDown" />
        
        
    </Canvas>
</Window>
